extends layout

block content
  h1= title
  p Welcome to #{title}. Student of Northwest Missouri state university.
  button(type="button" class="btn btn-success" onclick="doBump()") Press Me
  div(id="bump") Bump the count
  script.
      let count = 0;
      let bump = 1;
      function doBump() {
          count=count+bump;
          bump+=1;
          document.getElementById("bump").innerHTML=`Count ${count} with bump ${bump}`; 
      }